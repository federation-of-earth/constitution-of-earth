\pard\tx20\tx425\pardeftab720\li425\fi-426\sa360\partightenfactor0
\ls136\ilvl0\cf3 \cb1 \up0 \nosupersub \ulnone {\listtext	(a)	}\cf3 \cb4 \up0 \nosupersub \ulnone Nutritional sustenance;\
\ls136\ilvl0\cf3 \cb1 \up0 \nosupersub \ulnone {\listtext	(b)	}\cf3 \cb4 \up0 \nosupersub \ulnone Appropriate attire;\
